    <script>
        function incrementValue(inputId) {
            var inputElement = document.querySelector('input[name="' + inputId + '"]');
            var currentValue = parseInt(inputElement.value);
            inputElement.value = currentValue + 1;
            updateTotal();
        }
    
        function decrementValue(inputId) {
            var inputElement = document.querySelector('input[name="' + inputId + '"]');
            var currentValue = parseInt(inputElement.value);
            if (currentValue > 0) {
                inputElement.value = currentValue - 1;
                updateTotal();
            }
        }
       
        function updateTotal() {
            var totalClothingItems = 0;
            var quantityInputs = document.querySelectorAll('.quantity-cell input[type="number"]');
            quantityInputs.forEach(function (input) {
                totalClothingItems += parseInt(input.value);
            });
            document.getElementById('totalClothingItems').innerText = totalClothingItems;
        }
        function prepareClothesData() {
    var clothData = {};
    var quantityInputs = document.querySelectorAll('.quantity-cell input[type="number"]');
    quantityInputs.forEach(function(input) {
        var itemName = input.name;
        var itemQuantity = parseInt(input.value);
        clothData[itemName] = itemQuantity;
    });
    document.getElementById('clothesDataInput').value = JSON.stringify(clothData);
}

